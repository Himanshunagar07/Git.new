public class InvertedPyramid {
    public static void main(String[] args) {
        int rows = 3;

        for (int i = rows; i >= 1; i--) {
            // Print stars only, decreasing each row by 2
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
